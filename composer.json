{
    "name":         "gaufrette/local-adapter",
    "type":         "library",
    "description":  "PHP5 library that provides a filesystem abstraction layer",
    "keywords":     ["file", "filesystem", "media", "abstraction", "local"],
    "homepage":     "http://knplabs.com",
    "license":      "MIT",
    "authors": [
        {
            "name": "KnpLabs Team",
            "homepage": "http://knplabs.com"
        },
        {
            "name":     "The contributors",
            "homepage": "http://github.com/Gaufrette/local-adapter/contributors"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "gaufrette/core": "~1.0",
        "phine/path": "~1.0"
    },
    "require-dev": {
        "bossa/phpspec2-expect": "~1.0.0",
        "fabpot/php-cs-fixer": "~1.10",
        "gaufrette/test-suite": "~1.0",
        "phpspec/phpspec": "~2.0"
    },
    "autoload": {
        "psr-0": { "Gaufrette\\Adapter": "src/" }
    },
    "autoload-dev": {
        "psr-0": { "Gaufrette\\Test": "test/" }
    },
    "config": {
        "bin-dir": "bin"
    }
}
